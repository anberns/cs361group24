extends layout

block content
  .container
    h1 #{name}'s Donations
  
  
  
  .container
  form(action="/searchByDate", method="get" id="searchRange" novalidate)
    legend Select Date Range

    .input-group.input-daterange
    .form-group
      input.form-control(type='date', id ='start',name='start', placeholder='Start Date') 
    input-group-addon to
    .form-group
      input.form-control(type='date', id ='end',name='end', placeholder='End Date') 
    input.btn.btn-primary(type="submit", id="sendNewBank")
    .datepicker       

  
    table.table-responsive.table-hover
      captain
      thead-light
      tr.table-primary
        th.col-sm-4 Description
        th.col-sm-3 Date
        th.col-sm-3 Time
        th.col-sm-2 Details

      for d in donations
          tr
            td.col-sm-4= d.description
            td.col-sm-3= d.date
            td.col-sm-3= d.time
            td.col <a href=donationDetails?id=#{d.id}>Details 

