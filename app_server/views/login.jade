extends layout

block content
  if err
    .alert.alert-danger.aler-dismissable.fade.show(role="alert") #{err}
      button.close(type="button" data-dismiss="alert" aria-label="close")
        span(aria-hidden="true") &times;
  div(id="loginForm")
    form(action="/postLogin", method="post")
      fieldset(id="loginField")
        legend Vendor Login
        label Name
        input(type="text", name="name")
        br
        input(type="submit", id="loginSubmit")

  div(id="loginFormBank")
    form(action="/postLoginBank", method="post")
      fieldset(id="loginBankField")
        legend Food Bank Login
        label Name
        input(type="text", name="name")
        br
        input(type="submit", id="loginBankSubmit")
  
  
  
  
  
  
  
  
